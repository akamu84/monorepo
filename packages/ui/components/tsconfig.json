{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "ES2018",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "storybook-static", "utils", "src/**/*.stories.tsx", "src/**/*.test.tsx"]
}
